# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# Server Configuration
PORT=3001
NODE_ENV=development
# Comma-separated list of allowed frontend origins for CORS, e.g. http://localhost:5173,https://your-frontend.com
ALLOWED_ORIGINS=*

# Sentry Configuration (optional)
SENTRY_DSN=your_sentry_dsn_here

# Razorpay Configuration
# Obtain Key ID/Secret from Razorpay Dashboard → Settings → API Keys
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Create this when adding a Webhook in Razorpay Dashboard → Settings → Webhooks
# Use the exact same value here and in the dashboard so signatures verify
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret
# Webhook endpoint path (server) to configure in Razorpay Dashboard:
# https://your-backend-domain.com/api/v1/payments/razorpay/webhook

# Subscription grace period (days) after payment failure before gating features
# Optional. Defaults to 3 if unset.
SUBS_GRACE_DAYS=3
